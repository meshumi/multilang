<div class="btn-group btn-group-xs">
  <a class="btn btn-default"
     data-original-title="Edit"
     data-toggle="tooltip"
     href="<%= edit_language_path(language) %>"
     title="">
    <%= icon('edit', 'edit') %>
  </a>
  <% unless language.is_default? %>
    <a class="btn btn-default"
       data-original-title="Default"
       data-toggle="tooltip"
       href="<%= default_language_path(language) %>"
       title="">
      <%= icon('flag', 'flag') %>
    </a>
    <% if language.is_enable? %>
      <a class="btn btn-default"
         data-original-title="Disable"
         data-toggle="tooltip"
         href="<%= disable_language_path(language) %>"
         title="">
        <%= icon('toggle-off', 'toggle-off') %>
      </a>
    <% else %>
      <a class="btn btn-default"
         data-original-title="Enable"
         data-toggle="tooltip"
         href="<%= enable_language_path(language) %>"
         title="">
        <%= icon('toggle-on', 'toggle-on')%>
      </a>
    <% end %>
    <%= link_to 'delete', language_path(language),
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure?' } %>
  <% end %></div>
